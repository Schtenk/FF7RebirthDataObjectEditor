<UserControl x:Class="FF7RebirthDataObjectEditor.PropertyGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FF7RebirthDataObjectEditor"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <DataGrid x:Name="assetDataGrid"
              ItemsSource="{Binding AssetEntries, RelativeSource={RelativeSource AncestorType={x:Type local:PropertyGridControl}}}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
                  
              Margin="5"/>
</UserControl>
